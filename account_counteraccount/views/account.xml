<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="syscoon_show_counteraccount_form" model="ir.ui.view">
            <field name="name">sycoon Show Counteraccount Form</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="syscoon_account_counterpart" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="syscoon_show_counteraccount_tree" model="ir.ui.view">
            <field name="name">syscoon Show Counteraccount Tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="syscoon_account_counterpart" readonly="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>